{% extends 'front.html.twig' %}

{% block title %}Plannification index{% endblock %}

{% block body %}
    <style>
        table {
            background-color: rgb(26, 150, 126); /* vert */
            color: #fff; /* blanc */
            border-collapse: collapse;
            margin-top: 40px;
            width: 70%;
            font-size: 20px;
            margin-right: 50px;
            margin-left: 100px;
        }
        th {
            background-color: #fff; /* blanc */
            color: #000; /* noir */
        }
        h1{
            text-align: center;
            font-size: 50px;
            font-weight: bold;
            color: rgb(26, 150, 126);
            margin-bottom: 50px;
            margin-top: 100px;
        }
    </style>
    <h1 class="text-center">Vos Plannifications</h1>
    <div class="d-flex align-items-center justify-content-center" style="height: 500px">

        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Date Plannification</th>
                <th scope="col">Heure Debut</th>
                <th scope="col">Heure Fin</th>
                <th scope="col">Salle</th>
                <th scope="col">Etage</th>
                <th scope="col"></th>

            </tr>
            </thead>
            <tbody>
            {% for plannification in plannifications %}
                <tr>
                    <td>{{ plannification.id }}</td>
                    <td>{{ plannification.datepl ? plannification.datepl|date('Y-m-d') : '' }}</td>
                    <td>{{ plannification.heuredebutpl ? plannification.heuredebutpl|date('H:i:s') : '' }}</td>
                    <td>{{ plannification.heurefinpl ? plannification.heurefinpl|date('H:i:s') : '' }}</td>
                    <td>{{ plannification.salle }}</td>
                    <td>{{ plannification.salle.etagesa }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}