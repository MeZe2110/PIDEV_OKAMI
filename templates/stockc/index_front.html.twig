{% extends 'front.html.twig' %}



{% block body %}

<main id="main" class="main">
  <style>
        table {
            margin: 50px auto;
            width: 80%;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            text-align: center;
            border: 1px solid #ddd;
        }
        th {
            color:blue ;
            
        }
        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

     </style>
<center>
<h1 style="color:#336699; font-family: Arial, sans-serif; ;">Liste de medicaments</h1>
<form method="GET" action="{{ path('app_stockc') }}">
        <div class="input-group" style="width: 500px">
            <input type="text" name="search" class="form-control" id="searchInput" placeholder="Entrez votre recherche">
            <button type="submit" class="btn btn-primary">Rechercher</button>
        </div>
    </form>
 </center>
 <div> 
    
    <table border="3" class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nomst</th>
                <th>Quantites</th>
                <th>Dateexpirationst</th>
                <th>Description</th>
                <th>Categories</th>
                
            </tr>
        </thead>
        <tbody>
        {% for stock in stocks %}
            <tr>
                <td>{{ stock.id }}</td>
                <td>{{ stock.nomst }}</td>
                <td>{{ stock.quantites }}</td>
                <td>{{ stock.dateexpirationst ? stock.dateexpirationst|date('Y-m-d') : '' }}<br>
                {% if stock.isExpired() %}
                   <span class="text-danger">{{ stock.nomst }} est expir√© !</span>
                {% endif %}
                </td>
                <td>{{ stock.description }}</td>
                <td>{{ stock.stockcat }}</td>
             
</form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
 </div>
</main> 
{% endblock %}
