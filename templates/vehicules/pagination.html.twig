{% extends 'base.html.twig' %}

{% block title %}Vehicules index{% endblock %}

{% block body %}
<div><h1>Vehicules index</h1></div>
<div class="d-flex align-items-center justify-content-center" style="height: 520px;"> 
                                  
   <table class="table" style="
    
    margin-left: 410px;
">

    
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom </th>
                <th>Dispo(yes/no)</th>
                <th>Etat </th>
                <th>Description </th>
                <th>categorie </th>
                <th>actions</th>
               
                <th>
                <form method="post" action="{{ path('app_vehicules_new') }} ">
    <button class="btn btn-success">create new</button>
</form>

                
                
                
                
                </th>
            </tr>
        </thead>
        <tbody>
        
        {% for vehicule in vehicules %}
            <tr>
                <td>{{ vehicule.id }}</td>
                <td>{{ vehicule.nomvh }}</td>
                <td>{{ vehicule.dispovh ? 'Yes' : 'No' }}</td>
                <td>{{ vehicule.etatvh }}</td>
                <td>{{ vehicule.descvh }}</td>
                 <td>{{ vehicule.catv }}</td>
                <td>
                    <a href="{{ path('app_vehicules_show', {'id': vehicule.id}) }}">show</a>
                    <a href="{{ path('app_vehicules_edit', {'id': vehicule.id}) }}">edit</a>
                    
                </td>
                
            </tr>
                 
                   
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
     
       {{ knp_pagination_render(vehicules) }}
        <!-- <a href="{{ path('app_vehicules_new') }}">Create new</a> -->
        </tbody>
    </table>
<div class="table">
            <nav aria-label="Pagination">
                <ul class="pagination">

                   <table style="
   margin-top: 385px;
    margin-left: -679px;">
            <tr> <td>{{ knp_pagination_render(vehicules) }}</td></tr>
             </table>  

                </ul>
            </nav>
        </div>
   
             
    </div>
{% endblock %}
